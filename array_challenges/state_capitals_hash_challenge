states = {"Oregon" => "OR",
          "Alabama" => "AL",
          "New Jersey" => "NJ",
          "Colorado" => "CO"}

capitals = {"OR" => "Salem",
            "AL" => "Montgomery",
            "NJ" => "Trenton",
            "CO" => "Denver"}

puts "What state capital would you like to know?"
user_input = gets.chomp
state_abbr = states[user_input]
if state_abbr.nil?
  puts "I'm sorry, but I don't know that one."
else
  puts "The capital of #{user_input} is #{capitals[state_abbr]}."
end
